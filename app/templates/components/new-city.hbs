{{#if addNewCity}}
<div class="container">
  <form>
    <div class="form-group">
      <label for="name">City</label>
      {{input value=name id="name"}}
    </div>

    <div class="form-group">
      <label for="state">State</label>
      {{input value=state id="state"}}
    </div>

    <div class="form-group">
      <label for="country">Country</label>
      {{input value=country id="country"}}
    </div>
    <button {{action 'save1'}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'cityFormShow'}}>Add a New City</button>
{{/if}}
